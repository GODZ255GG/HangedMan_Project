<Page x:Class="HangedMan_Client.Views.ChallengerView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HangedMan_Client.Views"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="ChallengerView">

    <Page.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                    Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="5">
                            <ContentPresenter 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Border CornerRadius="20" Background="White"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MaxHeight="50"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border CornerRadius="20,20,0,0"  Background="#1E40AF">
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Label Content="Hangedman" VerticalAlignment="Center" FontSize="27" Margin="20,0,0,0" FontWeight="Bold" Foreground="White" Height="46"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <Border Background="#DBEAFE" CornerRadius="20" Width="Auto" Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Categoría:" HorizontalAlignment="Center" VerticalAlignment="Center"  FontWeight="Bold" FontSize="16" Margin="10,0,5,0" Foreground="#FF1E40AF"/>
                        <Label Content="Animales" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0" Foreground="#FF1E40AF"/>
                    </StackPanel>
                </Border>
                <Border Background="#F3E8FF" CornerRadius="20" Width="Auto">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Pista:" HorizontalAlignment="Center" VerticalAlignment="Center"  FontWeight="Bold" FontSize="16" Margin="10,0,5,0" Foreground="#6B21A8"/>
                        <Label Content="Vive en el océano" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0" Foreground="#6B21A8"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Intentos restantes:" HorizontalAlignment="Center" VerticalAlignment="Center"  FontWeight="Bold" FontSize="16" Margin="10,0,5,0" Foreground="#6B7280"/>
                <Label Content="6" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#EF4444" FontSize="16" FontWeight="Bold"/>
            </StackPanel>

            <StackPanel Grid.Row="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-180,0,0">
                        <Label Content="Vocales" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="A" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DBEAFE" Foreground="#FF1E40AF" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="E" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DBEAFE" Foreground="#FF1E40AF" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="I" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DBEAFE" Foreground="#FF1E40AF" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="O" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DBEAFE" Foreground="#FF1E40AF" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="U" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DBEAFE" Foreground="#FF1E40AF" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                        </StackPanel>
                    </StackPanel>

                    <Image Source="/Resources/0.jpg" Height="400" Width="400" Margin="0,20,0,40" Grid.Column="1"/>

                    <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label Content="Consonantes" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="B" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="C" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="D" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="F" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="G" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="H" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="J" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="K" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="L" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="M" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="N" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="Ñ" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="P" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="Q" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="R" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="S" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="T" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="V" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="W" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="X" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Y" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                            <Button Content="Z" Width="48" Height="48" Margin="5" FontWeight="Bold" FontSize="16" Background="#DCFCE7" Foreground="#166534" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,60">
                <WrapPanel x:Name="WordPanel"  VerticalAlignment="Center" Height="auto" HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,36">
                <Button Content="Abandonar Partida" Height="48" Width="400" Padding="10,0,10,0" FontWeight="Bold" FontSize="16" BorderBrush="{x:Null}" Style="{StaticResource RoundedButton}"/>
            </StackPanel>

            <Border Grid.Row="6" Background="#1E40AF" CornerRadius="0,0,20,20" Margin="0,7,0,0" Height="21"/>
        </Grid>
    </Grid>
</Page>
