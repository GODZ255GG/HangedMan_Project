<Page x:Class="HangedMan_Client.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HangedMan_Client.Views"
        xmlns:p="clr-namespace:HangedMan_Client.Properties"
        mc:Ignorable="d"
        Title="Hangman - Registro" 
        Width="1200" Height="800">

    <Page.Resources>
        <!-- Estilo para los botones de idioma -->
        <Style x:Key="LanguageRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="10,5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Rectangle Fill="#FFFFFFFF"/>

        <!-- Contenedor principal del formulario - Aumenté el ancho para acomodar dos columnas -->
        <Border Width="650" 
                Height="780"
                Background="#FFAFAFB1" 
                CornerRadius="10" 
                BorderThickness="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <Grid Margin="30,30,30,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="82"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto" MinHeight="110.497"/>
                </Grid.RowDefinitions>

                <!-- Encabezado -->
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Hangman" 
                               Foreground="Black" 
                               FontSize="32" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Crear nueva cuenta" 
                               Foreground="Black" 
                               FontSize="18"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Formulario de registro en DOS COLUMNAS -->
                <Grid Grid.Row="1" VerticalAlignment="Center" Height="550">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <!-- Espacio entre columnas -->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Columna Izquierda -->
                    <StackPanel Grid.Column="0">
                        <!-- Correo electrónico -->
                        <Label Content="{x:Static p:Resources.EmailRegister}" Foreground="Black" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtEmail" Height="35" Padding="8" 
                                 Foreground="Black" Background="#FFF9F9F9"
                                 BorderBrush="#FF9B9B9C"/>
                        <Label x:Name="labelEmailEmpty" Content="{x:Static p:Resources.LabelEmailEmpty}" HorizontalAlignment="Left" 
                               Foreground="Red" Margin="0,5,0,0" FontSize="12" FontWeight="Bold"/>

                        <!-- Nombres -->
                        <Label Content="{x:Static p:Resources.NamesRegister}" Foreground="Black" Margin="0,15,0,5"/>
                        <TextBox x:Name="txtNames" Height="35" Padding="8" 
                                 Foreground="Black" Background="White"
                                 BorderBrush="#FF9B9B9C"/>
                        <Label x:Name="labelNamesEmpty" Content="{x:Static p:Resources.LabelNamesEmpty}" HorizontalAlignment="Left"
                               Foreground="Red" Margin="0,5,0,0" FontSize="12" FontWeight="Bold"/>

                        <!-- Apellido Paterno -->
                        <Label Content="{x:Static p:Resources.FirstNameRegister}" Foreground="Black" Margin="0,15,0,5"/>
                        <TextBox x:Name="txtFirstSurname" Height="35" Padding="8" 
                                 Foreground="Black" Background="#FFFDFDFD"
                                 BorderBrush="#FF9B9B9C"/>
                        <Label x:Name="labelFirstSurnameEmpty" Content="{x:Static p:Resources.LabelFirstSurnameEmpty}" HorizontalAlignment="Left"
                               Foreground="Red" Margin="0,5,0,0" FontSize="12" FontWeight="Bold"/>

                        <!-- Contraseña -->
                        <Label Content="{x:Static p:Resources.PasswordRegister}" Foreground="Black" Margin="0,15,0,5"/>
                        <PasswordBox x:Name="txtPassword" Height="35" Padding="8" 
                                     Foreground="Black" Background="White"
                                     BorderBrush="#FF9B9B9C"/>
                        <Label x:Name="labelPasswordEmpty" Content="{x:Static p:Resources.LabelPasswordEmpty}" HorizontalAlignment="Left"
                               Foreground="Red" Margin="0,5,0,0" FontSize="12" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Columna Derecha -->
                    <StackPanel Grid.Column="2">
                        <!-- NickName -->
                        <Label Content="{x:Static p:Resources.NickNameRegister}" Foreground="Black" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtNickname" Height="35" Padding="8" 
                                 Foreground="Black" Background="White"
                                 BorderBrush="#FF9B9B9C"/>
                        <Label x:Name="labelNicknameEmpty" Content="Por favor ingresa tu nickname" HorizontalAlignment="Left"
                               Foreground="Red" Margin="0,5,0,0" FontSize="12" FontWeight="Bold"/>

                        <!-- Apellido Materno -->
                        <Label Content="{x:Static p:Resources.SecondNameRegister}" Foreground="Black" Margin="0,15,0,5"/>
                        <TextBox x:Name="txtSecondSurname" Height="35" Padding="8" 
                                 Foreground="Black" Background="White"
                                 BorderBrush="#FF9B9B9C"/>
                        <Label x:Name="labelSecondSurnameEmpty" Content="Por favor ingresa tu apellido materno" HorizontalAlignment="Left"
                               Foreground="Red" Margin="0,5,0,0" FontSize="12" FontWeight="Bold"/>

                        <!-- Número de teléfono -->
                        <Label Content="{x:Static p:Resources.TelephoneRegister}" Foreground="Black" Margin="0,15,0,5"/>
                        <TextBox x:Name="txtTelephone" Height="35" Padding="8" 
                                 Foreground="Black" Background="White"
                                 BorderBrush="#FF9B9B9C"/>
                        <Label x:Name="labelTelephoneEmpty" Content="{x:Static p:Resources.LabelTelephoneEmpty}" HorizontalAlignment="Left" 
                               Foreground="Red" Margin="0,5,0,0" FontSize="12" FontWeight="Bold"/>

                        <!-- Confirmar Contraseña -->
                        <Label Content="{x:Static p:Resources.PasswordConfirmationRegister}" Foreground="Black" Margin="0,15,0,5"/>
                        <PasswordBox x:Name="txtPasswordConfirmation" Height="35" Padding="8" 
                                     Foreground="Black" Background="White"
                                     BorderBrush="#FF9B9B9C"/>
                        <Label x:Name="labelPasswordConfirmationEmpty" Content="{x:Static p:Resources.LabelPaswwordConfirmationEmpty}" HorizontalAlignment="Left" 
                               Foreground="Red" Margin="0,5,0,0" FontSize="12" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>

                <!-- Elementos de ancho completo debajo de las dos columnas -->
                <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="10,399,0,0" Height="165" Grid.RowSpan="2">
                    <!-- Fecha de nacimiento -->
                    <Label Content="{x:Static p:Resources.BirthDateRegister}" Foreground="Black" Margin="5,15,0,5" Width="296"/>
                    <DatePicker x:Name="dpBirthDate" Height="35" Padding="8" Margin="145,0,0,0"
                                SelectedDateFormat="Short" Background="White"
                                Foreground="Black" BorderBrush="#FF9B9B9C"
                                Width="300" HorizontalAlignment="Left"/>
                    <Label x:Name="labelBirthDateEmpty" Content="{x:Static p:Resources.LabelBirthDateEmpty}" Margin="147,0,0,0"
                           Foreground="Red" FontSize="12" FontWeight="Bold"/>

                    <!-- Selector de idioma -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="-9,-5,0,0">
                        <RadioButton Content="{x:Static p:Resources.EnglishButton}" 
                                    Width="150" Height="40" Margin="0,0,40,0"
                                    IsChecked="True"
                                    Style="{StaticResource LanguageRadioButtonStyle}" Click="ChangeEnglish_Click"/>
                        <RadioButton Content="{x:Static p:Resources.SpanishButton}" 
                                    Width="150" Height="40"
                                    Style="{StaticResource LanguageRadioButtonStyle}" Click="ChangeSpanish_Click"/>
                    </StackPanel>
                </StackPanel>

                <!-- Botones de acción -->
                <StackPanel Grid.Row="2" Orientation="Vertical" 
            HorizontalAlignment="Center" Margin="0,5,0,0" Width="500">
                    <Button Content="Crear cuenta" 
            Width="500" Height="45"
            Background="#FF007ACC" Foreground="White" 
            FontWeight="Bold" FontSize="16"
            Margin="0,0,0,15" Click="Register_Click"/>
                    <Button Content="Regresar al inicio de sesión" 
            Width="500" Height="45"
            Background="Transparent" Foreground="#FF007ACC"
            BorderBrush="#FF007ACC" BorderThickness="1"
            FontSize="16"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>