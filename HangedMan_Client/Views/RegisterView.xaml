<Window x:Class="HangedMan_Client.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HangedMan_Client.Views"
        mc:Ignorable="d"
        Title="Hangman - Registro" 
        Width="1200" Height="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Estilo para los botones de idioma -->
        <Style x:Key="LanguageRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="10,5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Rectangle Fill="#88FFFFFF"/>

        <!-- Contenedor principal del formulario - Aumenté el ancho para acomodar dos columnas -->
        <Border Width="650" 
                Height="712"
                Background="#FFAFAFB1" 
                CornerRadius="10" 
                BorderThickness="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <Grid Margin="30,30,30,19">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Encabezado -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Hangman" 
                               Foreground="Black" 
                               FontSize="32" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Crear nueva cuenta" 
                               Foreground="Black" 
                               FontSize="18"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Formulario de registro en DOS COLUMNAS -->
                <Grid Grid.Row="1" VerticalAlignment="Center" Height="425">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <!-- Espacio entre columnas -->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Columna Izquierda -->
                    <StackPanel Grid.Column="0">
                        <!-- Correo electrónico -->
                        <TextBlock Text="Correo electrónico" Foreground="Black" Margin="0,0,0,5"/>
                        <TextBox x:Name="EmailTextBox" Height="35" Padding="8" 
                                 Foreground="Black" Background="#FFF9F9F9"
                                 BorderBrush="#FF9B9B9C"/>

                        <!-- Nombres -->
                        <TextBlock Text="Nombres" Foreground="Black" Margin="0,15,0,5"/>
                        <TextBox x:Name="FirstNameTextBox" Height="35" Padding="8" 
                                 Foreground="Black" Background="White"
                                 BorderBrush="#FF9B9B9C"/>

                        <!-- Apellido Paterno -->
                        <TextBlock Text="Apellido Paterno" Foreground="Black" Margin="0,15,0,5"/>
                        <TextBox x:Name="LastNameTextBox" Height="35" Padding="8" 
                                 Foreground="Black" Background="#FFFDFDFD"
                                 BorderBrush="#FF9B9B9C"/>

                        <!-- Contraseña -->
                        <TextBlock Text="Contraseña" Foreground="Black" Margin="0,15,0,5"/>
                        <PasswordBox x:Name="PasswordBox" Height="35" Padding="8" 
                                     Foreground="Black" Background="White"
                                     BorderBrush="#FF9B9B9C"/>
                    </StackPanel>

                    <!-- Columna Derecha -->
                    <StackPanel Grid.Column="2">
                        <!-- NickName -->
                        <TextBlock Text="NickName (Nombre de usuario)" Foreground="Black" Margin="0,0,0,5"/>
                        <TextBox x:Name="NickNameTextBox" Height="35" Padding="8" 
                                 Foreground="Black" Background="White"
                                 BorderBrush="#FF9B9B9C"/>

                        <!-- Apellido Materno -->
                        <TextBlock Text="Apellido Materno" Foreground="Black" Margin="0,15,0,5"/>
                        <TextBox x:Name="MotherLastNameTextBox" Height="35" Padding="8" 
                                 Foreground="Black" Background="White"
                                 BorderBrush="#FF9B9B9C"/>

                        <!-- Número de teléfono -->
                        <TextBlock Text="Número de teléfono" Foreground="Black" Margin="0,15,0,5"/>
                        <TextBox x:Name="PhoneTextBox" Height="35" Padding="8" 
                                 Foreground="Black" Background="White"
                                 BorderBrush="#FF9B9B9C"/>

                        <!-- Confirmar Contraseña -->
                        <TextBlock Text="Confirmar Contraseña" Foreground="Black" Margin="0,15,0,5"/>
                        <PasswordBox x:Name="ConfirmPasswordBox" Height="35" Padding="8" 
                                     Foreground="Black" Background="White"
                                     BorderBrush="#FF9B9B9C"/>
                    </StackPanel>
                </Grid>

                <!-- Elementos de ancho completo debajo de las dos columnas -->
                <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0,285,0,0" Height="166" Grid.RowSpan="2">
                    <!-- Fecha de nacimiento -->
                    <TextBlock Text="Fecha de nacimiento" Foreground="Black" Margin="5,15,0,5" Width="296"/>
                    <DatePicker x:Name="BirthDatePicker" Height="35" Padding="8" Margin="145,0,0,0"
                                SelectedDateFormat="Short" Background="White"
                                Foreground="Black" BorderBrush="#FF9B9B9C"
                                Width="300" HorizontalAlignment="Left"/>

                    <!-- Selector de idioma -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40,0,5">
                        <RadioButton x:Name="EnglishButton" Content="English" 
                                    Width="150" Height="40" Margin="0,0,10,0"
                                    IsChecked="True"
                                    GroupName="LanguageGroup"
                                    Style="{StaticResource LanguageRadioButtonStyle}"/>
                        <RadioButton x:Name="SpanishButton" Content="Español" 
                                    Width="150" Height="40"
                                    GroupName="LanguageGroup"
                                    Style="{StaticResource LanguageRadioButtonStyle}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Botones de acción -->
                <StackPanel Grid.Row="2" Orientation="Vertical" 
            HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Crear cuenta" 
            Width="500" Height="45"
            Background="#FF007ACC" Foreground="White" 
            FontWeight="Bold" FontSize="16"
            Margin="0,0,0,15"/>
                    <Button Content="Regresar al Login" 
            Width="500" Height="45"
            Background="Transparent" Foreground="#FF007ACC"
            BorderBrush="#FF007ACC" BorderThickness="1"
            FontSize="16"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>