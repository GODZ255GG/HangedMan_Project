<Window x:Class="HangedMan_Client.Views.ProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        Background="White" AllowsTransparency="True" 
        WindowStartupLocation="CenterOwner">
    
    <Border CornerRadius="10" Background="White" Padding="20">
        <StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                <TextBlock Text="Settings" FontWeight="Bold" FontSize="20" Foreground="#1E40AF"/>
                <Button Content="✕" Width="30" Height="30" HorizontalAlignment="Right" 
                        Click="Close_Click" Background="Transparent" BorderBrush="{x:Null}" FontSize="16"/>
            </StackPanel>
            <StackPanel Margin="0,20,0,10" HorizontalAlignment="Center">
                <Ellipse Width="60" Height="60" Fill="#E5E7EB">
                </Ellipse>
                <TextBlock Text="Player1" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                <TextBlock Text="Member since: Jan 2023" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
            </StackPanel>
            <Separator Margin="0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="View Full Profile" Width="120" Margin="0,0,10,0" Background="#1E40AF" Foreground="White"/>
                <Button Content="View History" Width="120" Background="#16A34A" Foreground="White"/>
            </StackPanel>
            <Button Content="Logout" Width="250" Margin="0,10,0,0" Background="#E5E7EB" Foreground="Gray"/>
        </StackPanel>
    </Border>
</Window>
